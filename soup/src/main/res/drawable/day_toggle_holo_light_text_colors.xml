<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default State -->
    <item android:state_checked="false" android:color="@color/day_picker_text" />
    <item android:state_checked="false" android:state_pressed="true"
          android:color="@color/day_picker_text_checked" />
    <item android:state_checked="true" android:color="@color/day_picker_text_checked" />
    <item android:state_checked="true" android:state_pressed="true"
          android:color="@color/day_picker_text" />
</selector>