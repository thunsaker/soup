<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Soup" parent="Theme.Soup.Base" />

    <style name="Theme.Soup.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="Theme.Soup.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.Soup.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.Soup.SpinnerOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Widget.Soup.Toolbar.Spinner" parent="Theme.Soup.SpinnerOverlay">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>
</resources>