<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutListItemHeaderProfileWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageViewListItemHeaderProfile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:contentDescription="@string/image_description_foursquare_profile"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/profile_boy" />

    <TextView
        android:id="@+id/textViewListItemHeaderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
		android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/lists_title_header_creator" />

</LinearLayout>