<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingBottom="90dp"
    android:background="@color/now_background">
    
    <TextView
        android:id="@+id/textViewFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" 
        android:text="@string/venue_list_search_footer" />

    <ImageView
        android:id="@+id/imageViewFooterPowered"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/image_description_powered_by_foursquare"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/foursquare_powered" />

</LinearLayout>