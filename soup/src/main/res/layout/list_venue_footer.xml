<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/material_padding_double"
    android:paddingBottom="90dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/textViewFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/material_type_small"
        android:text="@string/venue_list_search_footer" />

    <ImageView
        android:id="@+id/imageViewFooterPowered"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/material_padding"
        android:contentDescription="@string/image_description_powered_by_foursquare"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/foursquare_powered" />

</LinearLayout>